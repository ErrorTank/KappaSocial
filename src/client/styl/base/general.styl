::-webkit-scrollbar {
  width: 5px;
}

/* Track */
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px grey;
  border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: favor;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #e53f02;
}
.disabled-event{
  pointer-events none
}
.disabled{
  opacity 0.4
}