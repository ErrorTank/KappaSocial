    cursor pointer
  button:disabled
    cursor default
h1
h2
h3
h4
p
button
  margin 0
  padding 0
.row{
  margin 0 !important
}
ul{
  padding 0
  margin 0
  list-style-type none
  li{
    padding 0
  }
}
.h-light{
  color primary
  font-weight bold
}
::-webkit-scrollbar {
  width: 5px;
}

/* Track */
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px grey;
  border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: primary;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #3676ad;
}
.disabled-event{
  pointer-events none
}
.disabled{
  opacity 0.4
}
.new-feed-block{
  border 1px solid #e6e6e6
  border-radius 3px
  background-color white
}
.icon-container-middle{
  position absolute
  left 50%
  top 50%
  transform translate(-50%,-50%)
}