.post-footer{
  padding 0 25px
  margin-top 10px
  .footer-btn-wrapper{
    padding  10px 0
    border-top 1px solid #d1d1d1
    .kappa-post
    .comment-toggle
    {
      font-size sm - 0.2rem
      font-weight bold
      font-family: 'Open Sans', sans-serif;
      text-align center
      padding 6px 0 !important
      color #a5a5a5
      cursor pointer
      letter-spacing 0.8px
      transition all 0.1s linear
    }
    .kappa-post:hover
    .comment-toggle:hover{
      background-color #ededed
      color primary
    }
    .is-like{
      color primary
    }
  }
}