.post-header{
  padding 5px 5px
  .avatar-contain{
    width 50px !important
    height 50px !important
    overflow hidden
    margin auto
    position relative
    border 2px solid grey
    border-radius 50%
    .avatar{
      width 50px
      height 50px
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
    }
  }
  .header-info{
    .user-name-contain{
      line-height 18px
    }
    .user-name{
      font-size m - 0.6rem
      color primary
      margin-top 3px
      font-weight bold
      font-family: 'Lato', sans-serif;
      letter-spacing 1px
      cursor pointer
      display inline-block
      vertical-align top
      transition all 0.1s ease;

    }
    .user-name:hover{
      text-decoration underline
    }
    .time-to-now{
      font-size sm - 0.4rem
      color #898989
      vertical-align top
      display inline-block
    }
  }
}
