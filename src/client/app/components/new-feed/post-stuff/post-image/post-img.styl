.post-image{

  .img-post-contain{
    margin auto !important
    .img-holder{
      padding 8px !important
      height 120px
      position relative !important
      .inside-img-holder{
        width 100%
        height 100%
        border 2px dashed grey
        border-radius 3px
        cursor pointer
        position relative
        .add-img-icon{
          font-size m + 1rem
          color #a0a0a0
        }

        .img-upload{
          position absolute
          top 0
          left 0
          width 0
          height 0
          overflow hidden
        }
      }
    }
    .each-img{
      padding 8px !important
      position relative !important
      height 120px
    }
    @media screen and (max-width: 800px) {
      .each-img {
        height 80px
      }
      .img-holder {
        height 80px
      }
    }
    @media screen and (max-width: 500px) {
      .img-holder {
        height 50px
      }
      .img-holder {
        height 50px
      }
    }
  }
}
