.login-form{
  height 90%
  top 0
  width 100%
  position absolute
  .submit-btn-wrap{
    padding 0
    margin-top 20px !important
    position relative
    button{
      padding 5px 0
      font-size sm + 0.2rem
      color white
      transition all 0.2s ease
      background-color favor
    }
    .submit-btn:hover{
      background-color #da3f06
    }
  }
  .warning-slide-enter {

    opacity: 0;
  }

  .warning-slide-enter.warning-slide-enter-active {

    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .warning-slide-exit {

    opacity: 1;
  }

  .warning-slide-exit.warning-slide-exit-active {
    opacity: 0;
    transition: opacity 0.3s ease;
  }
}