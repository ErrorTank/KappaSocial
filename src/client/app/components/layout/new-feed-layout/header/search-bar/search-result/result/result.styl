.user-result {
  padding 8px 0
  border-bottom 1px solid grey
  cursor pointer
  .result-name {
      color #1a1a1a
      font-size sm
      overflow hidden

    }
    .r-ultils {
      text-align center
      font-size sm
      position relative
      .followed-notice {
        color #afafaf
        font-size sm - 0.5rem
      }
      .r-u-items {
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        transition all 0.1s linear
      }
      .add-friend {
        color #cccccc
      }
      .add-friend:hover {
        color darken(#cccccc, 30%)
      }
    }

}

.user-result:hover {
  background-color #f9f9f9
}