.profile-view{
  position absolute
  width 180px
  height 220px
  left 50%
  transform translateX(-50%)
  top 50px
  border-bottom 2px solid favor
  border-radius 4px
  overflow hidden
  background-color #5b5757
  .avatar{
    .img-contain-circle{
      width 70px
      height 70px
      border-radius 50%
      border 2px solid white
      margin auto
      margin-top 10px
      text-align center
      overflow hidden
      position relative
      transition all 0.2s ease
      img{
        width 72px
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        height 72px
      }
    }
    .img-contain-circle:hover{
      border-color danger
    }
  }
  .user-name{
    color white
    text-align center
    overflow hidden
    padding 0 12px
    margin-top 8px

    font-size sm + 0.2rem
  }
  .profile-view-ultils{
    margin-top 10px
    .pv-option{
      padding 0 10px
      font-size sm + 0.3rem
      transition all 0.2s linear
      border-left 3px solid transparent
      .option-title{
        padding-left 10x !important
        text-align left
      }
    }
    .pv-option:hover{
      border-color white
    }
  }
}