.fi-wrapper{
  position relative !important
  margin 0
  .fake-holder{
    position absolute
    color #919191
    font-size m - 0.5rem
    left 8px
    transition all 0.3s ease
    top 50%
    transform translateY(-50%)
    transform-origin 0 0
  }
  .on-focus{
    transform scale(0.7) translateY(-120%)
    color favor
  }
  input{
    font-size m - 0.5rem
    padding 6px 8px
    padding-right 30px
  }
  .i-focus{
    padding-bottom 0
    padding-top 15px
    font-size m - 0.5rem
    border-color favor
    font-weight 100
    box-shadow none
    padding-right 30px !important
  }
}
.valid{
  input{
    border-color success !important
  }
  .fake-holder{
    color success !important
  }
}
.in-valid{
  input{
    border-color danger !important
  }
  .fake-holder{
    color danger !important
  }
  .validate-msg{
    color danger !important
  }
}
.validate-msg{
  font-size sm - 0.4rem
  margin-bottom 3px
  padding 0 3px
  font-weight lighter
  color #afafaf
  min-height sm - 0.4rem
}