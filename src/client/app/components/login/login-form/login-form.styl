.login-form{
  margin-top 20px
  .form-group{
    position relative
    .fake-holder{
      position absolute
      color #919191
      font-size m - 0.5rem
      left 8px
      transition all 0.3s ease
      top 50%
      transform translateY(-50%)
      transform-origin 0 0
    }
    .on-focus{
      transform scale(0.7) translateY(-120%)
      color favor
    }
    input{
      font-size m - 0.5rem
      padding 6px 8px
    }
    .i-focus{
      padding-bottom 0
      padding-top 15px
      font-size m - 0.5rem
      border-color favor
      font-weight 100
      box-shadow none
    }
  }
  .submit-btn-wrap{
    padding 0
    margin-top 20px !important
    button{
      padding 5px 0
      font-size sm + 0.2rem
      color white
      transition all 0.2s ease
      background-color favor
    }
    .submit-btn:hover{
      background-color #da3f06
    }
  }

  .toggle-signup{
    margin-top 15px
    .t-sub{
      color #8e8e8e
      text-align center
      font-size sm
    }
    .switch-signup{
      color primary
      font-size sm
      font-weight bold
      text-align center
      cursor pointer
      transition all 0.2s ease
    }
    .switch-signup:hover{
      color #346fa2
    }
  }
}