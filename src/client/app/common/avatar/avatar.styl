.img-contain-circle{

  border-radius 50%
  border 2px solid grey
  margin auto
  text-align center
  overflow hidden
  position relative
  transition all 0.2s ease
  img{
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    height 72px
  }
}
.img-lg{
  width 70px
  height 70px
  img{
    height 72px
  }
}
.img-md{
  width 50px
  height 50px
  img{
    height 52px
  }
}
.img-sm{
  width 30px
  height 30px
  img{
    height 32px
  }
}